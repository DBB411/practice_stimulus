<h1>List: <%= @list.name%><h1>
<ul data-controller="list" data-list-id="<%= @list.id %>" data-list-move-items-url="<%= "/lists/#{@list.id}/move-items" %>" id="sortable">
  <% @items.each do |item| %>
    <li item-id="<%= item.id %>" class="ui-state-default"><span class="ui-icon ui-icon-arrowthick-2-n-s"></span><%= item.name %></li>
  <% end %>
</ul>

<table>
  <thead class="border-b border-gray-200">
    <tr>
      <th class="px-3 py-3 lg:px-6 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
        Name
      </th>
      <th class="px-3 py-3 lg:px-6 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
        Validity
      </th>
    </tr>
  </thead>
  <tbody
    data-controller="list"data-list-id="<%= @list.id %>" data-list-move-items-url="<%= "/lists/#{@list.id}/move-items" %>"
    class="bg-white"
  >
  <% @items.each do |item| %>
    <tr item-id="<%= item.id %>" class="ui-state-default"><td class="ui-icon ui-icon-arrowthick-2-n-s"><%= item.name %></td><td>--</td></tr>
  <% end %>
</table>
